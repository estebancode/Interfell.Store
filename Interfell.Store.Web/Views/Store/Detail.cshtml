@model Interfell.Store.Module.Commons.DTO.StoreDTO

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<div>
    <hr />
    <input type="hidden" id="IdStore" name="IdStore" value="@Model.IdStore" />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdStore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdStore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
</div>

<hr />

<p>
    @Html.ActionLink("Back to List", "Index", "Home", null, null)
</p>

<hr />

<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#modalCreateArticle">
            Create Article
        </button>
    </div>
</div>
<hr />

<h3>Articles</h3>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Price</td>
                    <td>Total in shelf</td>
                    <td>Total in vault</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody class="table-body-articles">
                <tr>
                    <td colspan="7">No hay elementos</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal create article -->
<div class="modal fade" id="modalCreateArticle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Create Article</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <fieldset>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Name</label>
                            <div class="col-md-6">
                                <input id="name" name="name" type="text" placeholder="shoes" class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="description">Description</label>
                            <div class="col-md-6">
                                <input id="description" name="description" type="text" placeholder="size ..." class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="price">Price</label>
                            <div class="col-md-6">
                                <input id="price" name="price" type="text" placeholder="10 000" class="form-control number-validation input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="totalinshelf">Total in shelf</label>
                            <div class="col-md-6">
                                <input id="totalinshelf" name="totalinshelf" type="number" placeholder=" 222 " class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="totalinvault">Total in vault</label>
                            <div class="col-md-6">
                                <input id="totalinvault" name="totalinvault" type="number" placeholder="6666" class="form-control input-md" required="">

                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="createArticle">Save changes</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal update article -->
<div class="modal fade" id="modalUpdateArticle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Update Article</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <fieldset>

                        <input type="hidden" id="id-edit" name="id-edit" />

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="name">Name</label>
                            <div class="col-md-6">
                                <input id="name-edit" name="name-edit" type="text" placeholder="shoes" class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="description">Description</label>
                            <div class="col-md-6">
                                <input id="description-edit" name="description-edit" type="text" placeholder="size ..." class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="price">Price</label>
                            <div class="col-md-6">
                                <input id="price-edit" name="price-edit" type="text" placeholder="10 000" class="form-control number-validation input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="totalinshelf">Total in shelf</label>
                            <div class="col-md-6">
                                <input id="totalinshelf-edit" name="totalinshelf-edit" type="number" placeholder=" 222 " class="form-control input-md" required="">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="totalinvault">Total in vault</label>
                            <div class="col-md-6">
                                <input id="totalinvault-edit" name="totalinvault-edit" type="number" placeholder="6666" class="form-control input-md" required="">

                            </div>
                        </div>

                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="updateArticle">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/Article")
}